<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <!-- change password wizard -->
    <record id="change_password_wizard_view_inherited" model="ir.ui.view">
        <field name="name">Change Password</field>
        <field name="model">change.password.wizard</field>
        <field name="inherit_id" ref="base.change_password_wizard_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_ids']" position="after">
                <div class="text-danger">
                    <strong>
                        <p>A password must satisfied below criteria:</p>
                        <ul>
                            <li>Atleast 8 characters length</li>
                            <li>Atleast 1 digit</li>
                            <li>Atleast 1 uppercase letter</li>
                            <li>Atleast 1 lowercase letter</li>
                            <li>Atleast 1 Special character [Valid : !@#$%&amp;*,.^_`~]</li>
                        </ul>
                    </strong>
                </div>
            </xpath>
        </field>
    </record>

  </data>
</openerp>
