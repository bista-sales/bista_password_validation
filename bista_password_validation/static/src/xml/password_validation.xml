<?xml version="1.0" encoding="utf-8"?>
<openerp>

<t t-extend="ChangePassword">
    <t t-jquery="div.oe_form" t-operation="after">
        <div class="text-danger">
            <strong>
                <p>A password must satisfied below criteria:</p>
                <ul>
                    <li>Atleast 8 characters length</li>
                    <li>Atleast 1 digit</li>
                    <li>Atleast 1 uppercase letter</li>
                    <li>Atleast 1 lowercase letter</li>
                    <li>Atleast 1 Special character [Valid : !@#$%&amp;*,.^_`~]</li>
                </ul>
            </strong>
        </div>
    </t>
</t>

</openerp>
